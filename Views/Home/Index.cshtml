@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="home-container">
    <h1>Collaborative Drawing App</h1>
    <p>Draw, chat, and collaborate in real-time with your team!</p>

    <div class="hero-image">
        <img src="@Url.Content("~/images/hero-image.png")" alt="Team Collaboration">
    </div>

    <a href="/Drawing/Index" class="start-button">Start Collaborating</a>

    <div class="features">
        <h2>Features</h2>
        <ul>
            <li>Real-time drawing and updates</li>
            <li>Collaborative chat for teamwork</li>
            <li>Save and download your drawings</li>
            <li>Clear the canvas anytime</li>
        </ul>
    </div>
</div>

